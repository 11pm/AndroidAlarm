<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="is.tskoli.alexander.alarm.AlarmRingActivity">

    <TextView
        android:id="@+id/alarmRingTitle"
        android:text="Alarm Ringing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_below="@+id/alarmRingTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISMISS"
        android:id="@+id/alarmRingDismiss"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snooze"
        android:id="@+id/alarmRingSnooze"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/alarmRingDismiss"
        android:layout_toEndOf="@+id/alarmRingDismiss" />

</RelativeLayout>
